<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
     <LinearLayout 
        android:layout_height="30dp"
        android:layout_width="5dp"
        android:background="@color/none"
        android:layout_marginTop="3dp"
        android:layout_alignParentLeft="true"
        android:orientation="vertical"
        android:id="@+id/linearDetailsPriority"></LinearLayout>
    
    <CheckBox 
        android:id="@+id/chkFinishDetails"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@id/linearDetailsPriority"/>
    
    <ImageButton
        android:background="@null"
        android:id="@+id/btnPriority"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:onClick="mudarPrioridade"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"/>
    
    <TextView
        android:id="@+id/txvDetailsDate"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="@string/label_task_date"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:textSize="14sp"
        android:clickable="true"
        android:onClick="selectDate"
        android:layout_toLeftOf="@id/btnPriority"/>
</RelativeLayout>
    
    
    <View
	    android:layout_width="match_parent"
	    android:layout_height="0.5dp"
	    android:layout_marginTop="5dp"
	    android:layout_marginLeft="5dp"
	    android:layout_marginRight="5dp"
	    android:background="@color/details_separator"
	    android:id="@+id/separatorListDetails"/>
    
    <EditText
        android:layout_margin="10dp"
        android:id="@+id/edtTaskDetails"
        android:hint="@string/hint_task_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@null"/>
    
</LinearLayout>
